<RelativeLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    tools:context=".Profile.ProfileHomeActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:id="@+id/parentRelativeLayout">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relLayout1">

            <include layout="@layout/snippet_top_profilebar"/>

        </RelativeLayout>
        <!-- **************************** Middle Section ********************** -->

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/relLayout2"
            android:layout_below="@id/relLayout1"
            android:background="@drawable/white_grey_border_bottom">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/linLayout"
                android:paddingLeft="10dp">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    android:id="@+id/profile_photo"
                    android:src="@drawable/hindi_collection"
                    app:civ_border_color="@color/black"
                    android:layout_centerHorizontal="true"
                    app:civ_border_width="2dp"
                    android:layout_centerVertical="true"
                    android:padding="5dp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="25dp"
                    android:layout_marginLeft="20dp"
                    android:layout_centerHorizontal="true"
                    android:layout_centerVertical="true">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="25sp"
                        android:text="@string/welcome" />
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="18sp"
                            android:layout_height="18sp"
                            android:src="@drawable/streak_lightning"
                            android:layout_gravity="center"/>


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="@color/colorPrimaryDark"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:text="@string/your_streak_is" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="50"
                            android:id="@+id/streakLengthOnProfile"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:text="0"
                            android:textColor="@color/black"
                            android:textAlignment="center"
                            android:gravity="center_horizontal" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/display_name"
                            android:textColor="@color/colorPrimaryDark"
                            android:textStyle="bold"
                            android:textSize="18sp"
                            android:text="@string/days" />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/achievements"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:id="@+id/achievement_header"
            android:layout_below="@+id/relLayout2"
            android:paddingLeft="10dp"/>
        <androidx.recyclerview.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/achievement_header"
            android:id="@+id/achievement_recycler_view"/>
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/achievement_recycler_view">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/achievement_linear_layout"
            android:orientation="vertical"
            android:padding="10dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="100"
                android:paddingBottom="10dp"
                android:id="@+id/linear1">
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:scaleType="centerCrop"
                    android:id="@+id/achievementThumbnail1"
                    android:src="@drawable/hindi_collection"
                    android:layout_weight="30"
                    android:background="@drawable/round_image"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="70"
                    android:paddingLeft="10dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/streak_title"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:id="@+id/achievement_title1"
                        android:maxLines="2"
                        android:textColor="#2d2d2d"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/streak_description"
                        android:textSize="17sp"
                        android:id="@+id/achievement_description1"
                        android:maxLines="2"
                        android:textColor="#2d2d2d"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="100"
                        android:orientation="horizontal">
                        <ProgressBar
                            android:layout_width="0dp"
                            android:layout_height="20dp"
                            android:max="7"
                            android:progress="3"
                            style="@android:style/Widget.ProgressBar.Horizontal"
                            android:id="@+id/simpleProgressBar1"
                            android:progressTint="@color/blue"
                            android:progressBackgroundTint="@color/cardBackground"
                            android:layout_weight="85"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="20dp"
                            android:layout_weight="0"
                            android:text="5"
                            android:paddingLeft="10dp"
                            android:id="@+id/achievement_target_number1"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="100"
                android:paddingBottom="10dp"
                android:id="@+id/linear2">
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:scaleType="centerCrop"
                    android:id="@+id/achievementThumbnail2"
                    android:src="@drawable/hindi_collection"
                    android:layout_weight="30"
                    android:background="@drawable/round_image"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="70"
                    android:paddingLeft="10dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/first_book_title"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:id="@+id/achievement_title2"
                        android:maxLines="2"
                        android:textColor="#2d2d2d"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/first_book_description"
                        android:textSize="17sp"
                        android:id="@+id/achievement_description2"
                        android:maxLines="2"
                        android:textColor="#2d2d2d"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="100"
                        android:orientation="horizontal">
                        <ProgressBar
                            android:layout_width="0dp"
                            android:layout_height="20dp"
                            android:max="7"
                            android:progress="3"
                            style="@android:style/Widget.ProgressBar.Horizontal"
                            android:id="@+id/simpleProgressBar2"
                            android:progressTint="@color/blue"
                            android:progressBackgroundTint="@color/cardBackground"
                            android:layout_weight="85"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="20dp"
                            android:layout_weight="0"
                            android:text="5"
                            android:paddingLeft="10dp"
                            android:id="@+id/achievement_target_number2"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="100"
                android:paddingBottom="10dp"
                android:id="@+id/linear3">
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:scaleType="centerCrop"
                    android:id="@+id/achievementThumbnail3"
                    android:src="@drawable/hindi_collection"
                    android:layout_weight="30"
                    android:background="@drawable/round_image"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="70"
                    android:paddingLeft="10dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/profile_picture_title"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:id="@+id/achievement_title3"
                        android:maxLines="2"
                        android:textColor="#2d2d2d"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/profile_picture_description"
                        android:textSize="17sp"
                        android:id="@+id/achievement_description3"
                        android:maxLines="2"
                        android:textColor="#2d2d2d"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="100"
                        android:orientation="horizontal">
                        <ProgressBar
                            android:layout_width="0dp"
                            android:layout_height="20dp"
                            android:max="7"
                            android:progress="3"
                            style="@android:style/Widget.ProgressBar.Horizontal"
                            android:id="@+id/simpleProgressBar3"
                            android:progressTint="@color/blue"
                            android:progressBackgroundTint="@color/cardBackground"
                            android:layout_weight="85"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="20dp"
                            android:layout_weight="0"
                            android:text="5"
                            android:paddingLeft="10dp"
                            android:id="@+id/achievement_target_number3"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="100"
                android:paddingBottom="10dp"
                android:id="@+id/linear4">
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:scaleType="centerCrop"
                    android:id="@+id/achievementThumbnail4"
                    android:src="@drawable/hindi_collection"
                    android:layout_weight="30"
                    android:background="@drawable/round_image"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="70"
                    android:paddingLeft="10dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/invite_title"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:id="@+id/achievement_title4"
                        android:maxLines="2"
                        android:textColor="#2d2d2d"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/invite_description"
                        android:textSize="17sp"
                        android:id="@+id/achievement_description4"
                        android:maxLines="2"
                        android:textColor="#2d2d2d"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="100"
                        android:orientation="horizontal">
                        <ProgressBar
                            android:layout_width="0dp"
                            android:layout_height="20dp"
                            android:max="7"
                            android:progress="3"
                            style="@android:style/Widget.ProgressBar.Horizontal"
                            android:id="@+id/simpleProgressBar4"
                            android:progressTint="@color/blue"
                            android:progressBackgroundTint="@color/cardBackground"
                            android:layout_weight="85"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="20dp"
                            android:layout_weight="0"
                            android:text="5"
                            android:paddingLeft="10dp"
                            android:id="@+id/achievement_target_number4"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:weightSum="100"
                android:paddingBottom="10dp"
                android:id="@+id/linear5">
                <ImageView
                    android:layout_width="0dp"
                    android:layout_height="120dp"
                    android:scaleType="centerCrop"
                    android:id="@+id/achievementThumbnail5"
                    android:src="@drawable/hindi_collection"
                    android:layout_weight="30"
                    android:background="@drawable/round_image"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="70"
                    android:paddingLeft="10dp"
                    android:orientation="vertical">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/chapters_title"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:id="@+id/achievement_title5"
                        android:maxLines="2"
                        android:textColor="#2d2d2d"/>
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/chapters_description"
                        android:textSize="17sp"
                        android:id="@+id/achievement_description5"
                        android:maxLines="2"
                        android:textColor="#2d2d2d"/>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="100"
                        android:orientation="horizontal">
                        <ProgressBar
                            android:layout_width="0dp"
                            android:layout_height="20dp"
                            android:max="7"
                            android:progress="3"
                            style="@android:style/Widget.ProgressBar.Horizontal"
                            android:id="@+id/simpleProgressBar5"
                            android:progressTint="@color/blue"
                            android:progressBackgroundTint="@color/cardBackground"
                            android:layout_weight="85"/>
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="20dp"
                            android:layout_weight="0"
                            android:text="5"
                            android:paddingLeft="10dp"
                            android:id="@+id/achievement_target_number5"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
        </ScrollView>
    </RelativeLayout>
    <include layout="@layout/layout_bottom_navigation_view"/>
</RelativeLayout>
