<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="wrap_content"
    android:padding="20dp"
    android:id="@+id/achievement_parent_id">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="100">
        <ImageView
            android:layout_width="0dp"
            android:layout_height="120dp"
            android:scaleType="centerCrop"
            android:id="@+id/achievementThumbnail"
            android:src="@drawable/hindi_collection"
            android:layout_weight="30"
            android:background="@drawable/round_image"/>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="70"
            android:paddingLeft="10dp"
            android:orientation="vertical">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="preview"
                android:textSize="20sp"
                android:textStyle="bold"
                android:id="@+id/achievement_title"
                android:maxLines="2"
                android:textColor="#2d2d2d"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="preview"
                android:textSize="17sp"
                android:id="@+id/achievement_description"
                android:maxLines="2"
                android:textColor="#2d2d2d"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="100"
                android:orientation="horizontal">
                <ProgressBar
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:max="7"
                    android:progress="3"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:id="@+id/simpleProgressBar"
                    android:progressTint="@color/blue"
                    android:progressBackgroundTint="@color/cardBackground"
                    android:layout_weight="85"/>
                <TextView
                    android:layout_width="0dp"
                    android:layout_height="20dp"
                    android:layout_weight="0"
                    android:text="5"
                    android:paddingLeft="10dp"
                    android:id="@+id/achievement_target_number"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
